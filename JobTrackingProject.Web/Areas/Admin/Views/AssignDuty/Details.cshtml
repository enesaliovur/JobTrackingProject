@model ListDutyViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Reports.Count > 0)
{
    <a class="btn btn-info mt-2">Excelde Görüntüler</a>
    <table class="table table-hover table-sm text-center table-bordered mt-2">
        <tr>
            <th colspan="2"> @Model.AppUser.Name @Model.AppUser.Surname adlı çalışanın @Model.Name görevine  yazmış olduğu raporlar </th>
        </tr>
        <tr>
            <th>Tanım</th>
            <th>Detay</th>
        </tr>
        @foreach (var report in Model.Reports)
        {
            <tr>
                <td> @report.Description</td>
                <td> @report.Details</td>

            </tr>

        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname şuan da @Model.Name görevi üzerinde çalışıyor.Henüz bir rapor yazmamış.
    </div>
}



