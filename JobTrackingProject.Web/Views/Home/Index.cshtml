@model AppUserSignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}



<form class="w-50 mx-auto p-3 mt-5  shadow" asp-action="SignIn" method="post">
    <h4 class="text-center lead">Giriş Yap</h4>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />

    </div>


    <div class="form-check">

        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>

    </div>


    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <a asp-action="SignUp" class="btn btn-warning btn-sm">Kayıt Ol</a>
    <button type="submit" class="btn btn-dark btn-sm">Giriş Yap</button>


</form>