                <a asp-action="Index" asp-controller="Duty" class="list-group-item list-group-item-action "><i class="fas fa-chart-bar mr-2"></i>Tamamlanan İşler</a>

                <a asp-area="" asp-action="SignOut" asp-controller="" class="list-group-item list-group-item-action "><i class="fas fa-sign-out-alt mr-2"></i>Çıkış Yap</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light  border-primary border-left-0 border-top-0 border-right-0">
