@model UpdateReportViewModel
@{
    ViewData["Title"] = "AddReport";
    Layout = "~/Areas/Employee/Views/Shared/_EmployeeLayout.cshtml";
}


<form class="w-74 mx-auto mt-3 p-4" method="post" asp-action="UpdateReport">
    <div class="card bg-light ">
        <div class="card-header">
            <h4 class="text-center lead pt-2">Görev Bilgileri </h4>
        </div>

        <div class="card-body">
            <p class="card-title"><span class="text-danger" style=" font-size: 15px; font-weight: bold;">Görev Adı: </span>@Model.Duty.Name</p>
            <p class="card-text">
                <span class="text-danger" style=" font-size: 15px; font-weight: bold;">Aciliyet Durumu:</span>@Model.Duty.Importance.Description
            </p>
            <p class="card-text"><span class="text-danger" style=" font-size: 15px; font-weight: bold;">Görev Açıklaması: </span>@Model.Duty.Description</p>


        </div>
    </div>

    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group mt-4">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description"></span>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Details"></label>
        <span asp-validation-for="Details"></span>
        <textarea asp-for="Details" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-sm btn-danger">Vazgeç</a>
        <button type="submit" class="btn btn-sm btn-info">Kaydet</button>

    </div>

</form>
@section Validation{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
