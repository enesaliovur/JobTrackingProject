        <div class="border-right border-primary border-left-0 border-top-0 border-bottom-0" id="sidebar-wrapper">
            <div class="sidebar-heading">Çalışan </div>
            <div class="list-group list-group-flush">
                <a asp-action="Index" asp-controller="Profile" class="list-group-item list-group-item-action "><i class="fas fa-user-circle mr-2"></i>Profilim</a>
                <a asp-action="Index" asp-controller="Notification" class="list-group-item list-group-item-action "><i class="far fa-bell mr-2"></i>Bildirimler<span class="badge badge-info badge-pill ml-3"></span></a>

