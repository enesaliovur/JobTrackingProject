@model ListAssignEmployeesViewModel
@{
    ViewData["Title"] = "AssignEmplooyes";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row mt-4">

    <div class="col-md-4">
        <div class="card border-primary">
            <div class="card-header">
                <h4 class="text-center lead pt-2">Görev Bilgileri</h4>
            </div>

            <div class="card-body">
                <h5 class="card-title">@Model.DutyViewModel.Name</h5>
                <p class="card-text">@Model.DutyViewModel.Description</p>
                <p class="card-text">
                    <strong>Aciliyet Durumu:</strong><span class="badge badge-info">@Model.DutyViewModel.Importance.Description</span>
                </p>

            </div>
        </div>
    </div>
    <div class="col-md-8">
        
        <div class="card mb-3 border-primary">
            <div class="card-header">
                <h5 class="card-title">Personel Bilgileri</h5>
            </div>
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/img/@Model.AppUserViewModel.ImageUrl" class="card-img img-thumbnail" alt="@Model.AppUserViewModel.Name " style="width:8rem; height:8rem">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.AppUserViewModel.Name @Model.AppUserViewModel.Surname </h5>
                        <getDutyAppUserId app-user-id="@Model.AppUserViewModel.Id"></getDutyAppUserId>

                        <p class="card-text">
                            <small class="text-muted">@Model.AppUserViewModel.Email</small>

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <form class="w-100" asp-action="ListEmployees" method="post">
            <hr />
            <div class="form-group text-center">
                <input type="hidden" name="EmplooyeId" value="@Model.AppUserViewModel.Id" />
                <input type="hidden" name="DutyId" value="@Model.DutyViewModel.Id" />
                <p class="lead"> Göreve ilgili personel atanacaktır.Bu işlemi gerçekleştirmek istediğinizden emin misiniz ?  <a class="btn btn-sm btn-danger mr-1" asp-action="ListEmployees" asp-route-id="@Model.DutyViewModel.Id">Hayır</a> <button  type="submit" class="btn btn-sm btn-success ">Evet</button></p>
                <hr />


            </div>

        </form>

    </div>
</div>

